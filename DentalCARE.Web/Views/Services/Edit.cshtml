@using DentalCare.Core
@model Service
<form method="post" class="person-item__form">
    <h2 class="person-item__title">Редактирование услуги</h2>
    <label for="">Название</label>
    <input type="text" class="person-item__input" name="Name" value="@Model.Name" placeholder="Название">
    <label for="">Описание</label>
    <input type="text" class="person-item__input" name="Description" value="@Model.Description" placeholder="Описание">
    <label for="">Цена</label>
    <input type="text" class="person-item__input" name="Price" value="@Model.Price" placeholder="Цена">
    <button type="submit" class="person-item__btn">Сохранить изменения</button>
</form>
